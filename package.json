{
  "name": "pix",
  "displayName": "Pix",
  "description": "Professional diagram creation tool for VS Code - Draw rectangles, connect them with labeled lines, and create interactive flowcharts and diagrams",
  "version": "1.3.0",
  "publisher": "nigelwgmajor",
  "repository": {
    "type": "git",
    "url": "https://github.com/NigelWGMajor/rectangle-drawer-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/NigelWGMajor/rectangle-drawer-vscode-extension/issues"
  },
  "homepage": "https://github.com/NigelWGMajor/rectangle-drawer-vscode-extension#readme",
  "keywords": [
    "diagram",
    "flowchart",
    "drawing",
    "visualization",
    "rectangles",
    "connections",
    "charts"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pix",
        "extensions": [
          ".pix.json"
        ],
        "aliases": [
          "Pix Drawing",
          "pix"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "pix.pixEditor",
        "displayName": "Pix Drawing Editor",
        "selector": [
          {
            "filenamePattern": "*.pix.json"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "pix.openDrawingView",
        "title": "Open in Panel",
        "category": "Pix",
        "icon": "$(window)"
      },
      {
        "command": "pix.openInSidebar",
        "title": "Show in Sidebar",
        "category": "Pix",
        "icon": "$(layout-sidebar-left)"
      },
      {
        "command": "pix.openDevTools",
        "title": "Open Developer Tools",
        "category": "Pix",
        "icon": "$(tools)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pix",
          "title": "Pix",
          "icon": "$(selection)"
        }
      ]
    },
    "views": {
      "pix": [
        {
          "id": "pixView",
          "name": "Pix",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "pix.openDrawingView",
          "when": "view == pixView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "pix.openDrawingView",
          "when": "true"
        },
        {
          "command": "pix.openInSidebar",
          "when": "true"
        },
        {
          "command": "pix.openDevTools",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.32.0",
    "typescript": "^4.9.4"
  }
}