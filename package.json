{
  "name": "rectangle-drawer",
  "displayName": "Rectangle Drawer",
  "description": "Draw rectangles and connect them with mouse interactions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rectangleDrawer.openDrawingView",
        "title": "Open in Panel",
        "category": "Rectangle Drawer",
        "icon": "$(window)"
      },
      {
        "command": "rectangleDrawer.openInSidebar",
        "title": "Show in Sidebar",
        "category": "Rectangle Drawer",
        "icon": "$(layout-sidebar-left)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rectangleDrawer",
          "title": "Rectangle Drawer",
          "icon": "$(selection)"
        }
      ]
    },
    "views": {
      "rectangleDrawer": [
        {
          "id": "rectangleDrawerView",
          "name": "Drawing Canvas",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "rectangleDrawer.openDrawingView",
          "when": "view == rectangleDrawerView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "rectangleDrawer.openDrawingView",
          "when": "true"
        },
        {
          "command": "rectangleDrawer.openInSidebar",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}